@model Baig_Clinic.Models.PrescriptionViewModel
@{
    ViewBag.Title = "Baig Clininc";
    var count = 1;
}

<div class="container-fluid ">
    <br />

    <div class="row">
        <div class="col-md-12 text-center">
            <h3>Baig Clinic | Dr. Muhammad Naeem Baig</h3>
            <h4>MBBS, PM DC. Reg No. 9568-P</h4>
            <h5>PHC NO-R-03240</h5>
            <h6>VCO: </h6>
            <h5>@ViewBag.Date</h5>

        </div>
    </div>
    <hr>

    <br />
    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { id = "uploadForm1", enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-1"><label class="ml-4">Name:</label> </div> <div class="col-md-5"><input id="patientName" name="Name" type="text" class="form-control" /></div>
            <div class="col-md-1"><label class="ml-5">Age:</label> </div> <div class="col-md-5"><input id="patientAge" name="Age" type="number" class="form-control" min="0" step="1" /></div>
            <div class="col-md-1 mt-3"><label class="ml-4"> Address:</label> </div> <div class="col-md-11 mt-3"><input id="address" name="Address" type="text" class="form-control" /></div>
             
        </div>
    <br />
    <br/>
        <div class="row">
            <div class="col-md-1"><label class="ml-4">Blood Pressure:</label> </div> <div class="col-md-5"><input id="bp" name="BloodPressure" type="text" class="form-control" /></div>
            <div class="col-md-1"><label class="ml-5">Temperature:</label> </div> <div class="col-md-5"><input id="patientAge" name="Temperature" type="number" class="form-control" min="0" step="1" /></div>
             
            <div class="col-md-1 mt-3"><label class="ml-4"> Diagnose:</label> </div> <div class="col-md-11 mt-3"><input id="diagnose" name="Diagnose" type="text" class="form-control" /></div>

        </div>

        <br />
        <br />

        <table class="table table-bordered bordering">
            <thead>
                <tr>
                    <th class="marging0">
                        Sr.
                    </th>
                    <th class="marging1">
                        Medicine + Type
                    </th>
                    <th class="w-25">
                        Strength
                    </th>
                    <th class="marging">
                        M
                    </th>
                    <th class="marging">
                        E
                    </th>
                    <th class="marging">
                        N
                    </th>
                    <th class="marging">
                        No. Of Days
                    </th>
                    <th class="marging">
                        Once A Week
                    </th>
                    <th class="marging">
                       Once in 2 Week
                    </th>
                    <th class="marging">
                       Once A Month
                    </th>
                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < Model.prescriptions.prescriptionDetailList.Count(); i++)
                {
                <tr>
                    <td> @Model.prescriptions.prescriptionDetailList[i].SerialNumber</td>
                    <td>@Html.TextBoxFor(m => Model.prescriptions.prescriptionDetailList[i].MedicineName, new { @class = "form-control" })</td>
                    <td>@Html.TextBoxFor(m => Model.prescriptions.prescriptionDetailList[i].Strength, new { @class = "form-control" })</td>
                    <td>@Html.TextBoxFor(m => Model.prescriptions.prescriptionDetailList[i].MorningDose, new { @class = "form-control", min = 0, @type = "number" })</td>
                    <td>@Html.TextBoxFor(m => Model.prescriptions.prescriptionDetailList[i].EveningDose, new { @class = "form-control", min = 0, @type = "number" })</td>
                    <td>@Html.TextBoxFor(m => Model.prescriptions.prescriptionDetailList[i].NightDose, new { @class = "form-control", min = 0, @type = "number" })</td>
                    <td>@Html.TextBoxFor(m => Model.prescriptions.prescriptionDetailList[i].NoOfDays, new { @class = "form-control", min = 0, @type = "number" })</td>
                    <td>@Html.CheckBoxFor(m => Model.prescriptions.prescriptionDetailList[i].OnceAWeek)</td>
                    <td>@Html.CheckBoxFor(m => Model.prescriptions.prescriptionDetailList[i].OnceInTwoWeek)</td>
                    <td>@Html.CheckBoxFor(m => Model.prescriptions.prescriptionDetailList[i].OnceAMonth)</td>
                </tr>
                    count++;
                }


            </tbody>

        </table>
        <div class="row justify-content-center">
            <div class="form-group w-75 ">
                <label class="font-weight-bold " for="comment">Comments:</label>
                <textarea class="form-control " name="Comments" rows="8" id="comment"></textarea>
            </div>

        </div>
        <button type="submit" class="btn btn-primary float-right mr">Submit</button>
    }
</div>
@section scripts {

}
